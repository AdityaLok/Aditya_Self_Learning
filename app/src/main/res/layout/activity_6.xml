<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity6">
        <fragment
            android:id="@+id/frag1"
            android:name="com.example.project.Frag1"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:layout_margin="40dp" >
        </fragment>
        <fragment
            android:id="@+id/frag2"
            android:name="com.example.project.Frag2"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_below="@+id/frag1"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="100sp">
        </fragment>
        <fragment
            android:id="@+id/frag3"
            android:name="com.example.project.Frag3"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_below="@id/frag1"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="100sp"
            android:layout_toRightOf="@+id/frag2">
        </fragment>

        <fragment
            android:id="@+id/frag4"
            android:name="com.example.project.Frag4"
            android:layout_width="200sp"
            android:layout_height="150sp"
            android:layout_below="@id/frag2"
            android:layout_marginLeft="40sp"
            android:layout_marginTop="100sp"/>

        <fragment
            android:id="@+id/frag5"
            android:name="com.example.project.Frag5"
            android:layout_width="400sp"
            android:layout_height="100sp"
            android:layout_below="@id/frag3"
            android:layout_marginLeft="100sp"
            android:layout_marginTop="100sp"
            android:layout_toRightOf="@id/frag4"/>
</RelativeLayout>